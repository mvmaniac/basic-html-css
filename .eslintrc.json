{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["import"],
  "rules": {
    "no-unused-vars": ["warn"],
    "no-underscore-dangle": ["warn"]
  },
  "ignorePatterns": ["src/flex/10.html", "src/flex/js/*.js"]
}
