{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:css-modules/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "prettier",
    "html",
    "css-modules"
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": ["warn"],
    "no-underscore-dangle": ["warn"]
  }
}
